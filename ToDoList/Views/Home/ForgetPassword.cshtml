</head>

<body>

    <!-- ======= Property Search Section ======= -->
    <div class="click-closed"></div>
    <!--/ Form Search Star /-->
    <!-- ======= Header/Navbar ======= -->
    <nav class="navbar navbar-default navbar-trans navbar-expand-lg fixed-top">
        <div class="container">
            <button class="navbar-toggler collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#navbarDefault" aria-controls="navbarDefault" aria-expanded="false" aria-label="Toggle navigation">
                <span></span>
                <span></span>
                <span></span>
            </button>
            <a class="navbar-brand text-brand" asp-controller="Home" asp-action="Index">ToDo<span class="color-b">List</span></a>

            <div class="navbar-collapse collapse justify-content-center" id="navbarDefault">
                <ul class="navbar-nav" style="position:relative;left:52%;">
                    <li class="nav-item">
                        <a class="nav-link " asp-controller="Home" asp-action="Login">Login</a>
                    </li>
                </ul>
            </div>


        </div>
    </nav><!-- End Header/Navbar -->

    <main id="main">



        <!-- ======= Contact Single ======= -->
        <section class="vh-100" style="background-color: #ffffff;">
            <div class="container py-5 h-100">
                <div class="row d-flex justify-content-center align-items-center h-100" style="position: relative;top: 20%;">
                    <div class="col col-xl-10">
                        <div class="card" style="border-radius: 1rem;">
                            <div class="row g-0">
                                <div class="col-md-6 col-lg-5 d-none d-md-block">
                                    <img src="~/pexels-pixabay-280347.jpg"
                                         alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;    height: 100%;" />
                                </div>
                                <div class="col-md-6 col-lg-7 d-flex align-items-center">
                                    <div class="card-body p-4 p-lg-5 text-black">

                                        <form method="post" onsubmit="return Test();">

                                            <div class="d-flex align-items-center mb-3 pb-1">
                                                <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                                                <span class="h1 fw-bold mb-0">Forget Password</span>
                                            </div>

                                            <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Randomly Generated Password will be Send over the Mail</h5>

                                            <div class="form-outline mb-4">

                                                <input type="email" placeholder="Enter Email" name="ForgetPassword" required class="form-control" />

                                            </div>

                                         
                                            <div class="pt-1 mb-4">
                                                <input type="submit" value="SendNewPassword" onsubmit="submit()" class="btn btn-primary btn-block fa-lg gradient-custom-2 mb-3" />
                                                <h3>@ViewBag.ForgetPassword</h3>
                                                <h3>@ViewBag.ForgetPassword2</h3>
                                            </div>

                                        </form>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

    </main><!-- End #main -->


    <div id="preloader"></div>
    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Vendor JS Files -->
    <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="~/assets/vendor/php-email-form/validate.js"></script>

    <!-- Template Main JS File -->
    <script src="~/assets/js/main.js"></script>

</body>

</html>